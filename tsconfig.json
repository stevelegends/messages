{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "@screens": ["src/screens"],
            "@components": ["src/components"],
            "@utils": ["src/utils"],
            "@contexts/*": ["src/contexts/*"],
            "@config/*": ["src/config/*"],
            "@constants/*": ["src/constants/*"],
            "@hoc/*": ["src/hoc/*"],
            "@hooks/*": ["src/hooks/*"],
            "@assets/*": ["assets/*"]
        }
    }
}
